<div class="row">
  <div class="col-sm-3"></div>
  <div class="jumbotron text-center col-sm-6">
    <h1>Contestant List</h1>
    <h4><%= @contestants.count %> people have played this game</h4>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Height</th>
          <th>Weight</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contestants.each do |contestant| %>
          <tr>
            <td><%= contestant.name %></td>
            <td><%= contestant.height %></td>
            <td><%= contestant.weight %></td>
            <td><%= link_to 'Show', contestant, class: "grey-link" %>  | </td> 
            <td><%= link_to 'Edit', edit_contestant_path(contestant), class: "grey-link" %>  | </td>
            <td><%= link_to 'Destroy', contestant, method: :delete, data: { confirm: 'Are you sure?' }, class: "grey-link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Contestant', new_contestant_path %> |
    <%= link_to 'See Classifier Data', classifier_path %> |
    <%= link_to 'Train Computer', new_trainer_path %>
  </div>
  <div class="col-sm-3"></div>
</div>
